<h1>New Order</h1>
<%= form_with model: @order, url: product_orders_path do |form| %>
   <%= form.hidden_field :user_id, value: current_user.id %>
    <div class="card container" >
      <div class="card-body" >
         <div class="mb-3" >
            <%= form.label :name, {class: "form-label"} %><br>
            <%= form.text_field :name, {class: "form-control", placeholder: "Name"}  %>
            <% @order.errors.full_messages_for(:name).each do |message| %>
              <div><%= message %></div>
            <% end %>
         </div>
         <div class="mb-3" >
            <%= form.label :quantity, {class: "form-label"} %><br>
            <%= form.number_field :quantity, {class: "form-control", placeholder: "Quantity"}  %>
            <% @order.errors.full_messages_for(:quantity).each do |message| %>
              <div><%= message %></div>
            <% end %>
         </div>
         <div class="mb-3" >
            <%= form.label :status, {class: "form-label"} %><br>
            <%= form.select :status, ["ordered", "shipped", "delivered"], {class: "form-control", }  %>
         </div>
          <div>
             <%= form.submit %>
          </div>
       </div>
    </div>
    <% end %>