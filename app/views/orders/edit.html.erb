<h1>New Order</h1>
<%= form_with model: @order do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="card container" >
    <div class="card-body" >
        <div class="mb-3" >
          <%= form.label :name, {class: "form-label"} %><br>
          <%= form.text_field :name, {class: "form-control", placeholder: "Name"}  %>
          <% @order.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
        <div class="mb-3" >
          <%= form.label :quantity, {class: "form-label"} %><br>
          <%= form.number_field :quantity, {class: "form-control", placeholder: "Quantity"}  %>
          <% @order.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
        <div>
            <%= form.submit %>
        </div>
      </div>
  </div>
<% end %>