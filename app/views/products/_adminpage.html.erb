<div class="part" ><%= link_to "create a new product", new_product_path %></div>
<table class="table table-dark table-striped" >
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Availability</th>
      <th colspan="2" >action</th>
    </tr>  
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.cost %></td>
        <td><%= product.brand %></td>
        <td><%= product.availability %></td>
        <td><%= link_to "edit", edit_product_path(product), class: "btn btn-light" %></td>
        <td><%= link_to "Destroy", product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>